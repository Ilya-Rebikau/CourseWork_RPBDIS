@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if(User.Identity.IsAuthenticated)
    {
        <h3>Hello, @User.Identity.Name!</h3>
        <h5>You successfully logined to app, now you can start working</h5>
        <h6>Or</h6>
        <form method="post" asp-controller="Account" asp-action="Logout">
            <input class="btn btn-danger" type="submit" value="Logout" />
        </form>
    }
    else
    {
        <h3>Hello, you didn't login to the app, please do it</h3>
        <a class="btn btn-success" asp-controller="Account" asp-action="Login">Login</a>
    }
</div>
