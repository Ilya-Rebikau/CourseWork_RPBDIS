@model Car
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>Car</h4>
<hr />
<div class="row">
    <div class="col-md-3">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label">Registration number</label>
                <input asp-for="RegistrationNumber" class="form-control" />
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyNumber" class="control-label">Body number</label>
                <input asp-for="BodyNumber" class="form-control" />
                <span asp-validation-for="BodyNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineNumber" class="control-label">Engine number</label>
                <input asp-for="EngineNumber" class="form-control" />
                <span asp-validation-for="EngineNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechPassportNumber" class="control-label">Technical passport number</label>
                <input asp-for="TechPassportNumber" class="form-control" />
                <span asp-validation-for="TechPassportNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateCreating" class="control-label">Creating date</label>
                <input asp-for="DateCreating" type="date" class="form-control" />
                <span asp-validation-for="DateCreating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateRegistration" class="control-label">Registration date</label>
                <input asp-for="DateRegistration" type="date" class="form-control" />
                <span asp-validation-for="DateRegistration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateInspection" class="control-label">Date of last inspection</label>
                <input asp-for="DateInspection" type="date" class="form-control" />
                <span asp-validation-for="DateInspection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Owner.PassportInfo" class="control-label">Owner's passport information</label>
                <select asp-for="OwnerId" class ="form-control" asp-items="ViewBag.OwnerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrafficPoliceOfficerId" class="control-label">Traffic police officer</label>
                <select asp-for="TrafficPoliceOfficerId" class ="form-control" asp-items="ViewBag.TrafficPoliceOfficerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CarBrand" class="control-label">Car brand</label>
                <select asp-for="CarBrandId" class ="form-control" asp-items="ViewBag.CarBrandId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
