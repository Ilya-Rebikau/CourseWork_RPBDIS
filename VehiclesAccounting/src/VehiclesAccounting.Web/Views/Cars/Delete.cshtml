@model Car
@{
    ViewData["Title"] = "Delete";
}
<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Registration number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationNumber)
        </dd>
        <dt class = "col-sm-2">
            Body Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BodyNumber)
        </dd>
        <dt class = "col-sm-2">
            Engine Number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EngineNumber)
        </dd>
        <dt class = "col-sm-2">
            Technical passport number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TechPassportNumber)
        </dd>
        <dt class = "col-sm-2">
            Creating date
        </dt>
        <dd class = "col-sm-10">
            @Model.DateCreating.ToLongDateString()
        </dd>
        <dt class = "col-sm-2">
            Registration date
        </dt>
        <dd class = "col-sm-10">
            @Model.DateRegistration.ToLongDateString()
        </dd>
        <dt class = "col-sm-2">
            Date of last inspection
        </dt>
        <dd class = "col-sm-10">
            @Model.DateInspection.ToLongDateString()
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Owner)
        </dt>
        <dd class = "col-sm-10">
            @Model.Owner.Surname @Model.Owner.Name @Model.Owner.Patronymic, @Model.Owner.Birthday.ToLongDateString()
        </dd>
        <dt class = "col-sm-2">
            Traffic police officer
        </dt>
        <dd class = "col-sm-10">
            @Model.TrafficPoliceOfficer.Surname @Model.TrafficPoliceOfficer.Name @Model.TrafficPoliceOfficer.Patronymic, @Model.TrafficPoliceOfficer.Birthday.ToLongDateString()
        </dd>
        <dt class = "col-sm-2">
            Car brand
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CarBrand.Name)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </form>
</div>
